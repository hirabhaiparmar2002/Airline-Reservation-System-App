<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="12dp"
    android:backgroundTint="#D5D5D5"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="19sp"/>
            <TextView
                android:id="@+id/u_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABHISHEK"
                android:textStyle="bold"
                android:textColor="#0000FF"
                android:textSize="19sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="19sp"/>
            <TextView
                android:id="@+id/u_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abhishekmonu2016@gmail.com"
                android:textStyle="bold"
                android:textColor="#0000FF"
                android:textSize="19sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="19sp"/>
            <TextView
                android:id="@+id/u_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textStyle="bold"
                android:textColor="#0000FF"
                android:textSize="19sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile No: "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="19sp"/>
            <TextView
                android:id="@+id/u_mobno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9586496351"
                android:textStyle="bold"
                android:textColor="#0000FF"
                android:textSize="19sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender: "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="19sp"/>
            <TextView
                android:id="@+id/u_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textStyle="bold"
                android:textColor="#0000FF"
                android:textSize="19sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="19sp"/>
            <TextView
                android:id="@+id/u_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textStyle="bold"
                android:textColor="#0000FF"
                android:textSize="19sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qualification:"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="19sp"/>
            <TextView
                android:id="@+id/u_qualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Btech"
                android:textStyle="bold"
                android:textColor="#0000FF"
                android:textSize="19sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Father Name: "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="19sp"/>
            <TextView
                android:id="@+id/u_fname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="father Name"
                android:textStyle="bold"
                android:textColor="#0000FF"
                android:textSize="19sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOB: "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="19sp"/>
            <TextView
                android:id="@+id/u_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20-01-1901"
                android:textStyle="bold"
                android:textColor="#0000FF"
                android:textSize="19sp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>